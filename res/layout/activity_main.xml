<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ProgressBar
                android:id="@+id/update_progress_bar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/updated_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/updated_at"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/buoy" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/atmosphere"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/buoy"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/buoy" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/wind_direction_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/wind_direction"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/wind_speed_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/wind_speed"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/wind_gust_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/wind_gust"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/air_temperature_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/air_temperature"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/humidity_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/humidity"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="3dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/water_temperature"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/buoy"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/buoy" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/surface_temperature_caption"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/surface_temperature_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/surface_temperature"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/one_meter_temperature_caption"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/one_meter_temperature_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/one_meter_temperature"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/five_meter_temperature_caption"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/five_meter_temperature_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/five_meter_temperature"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/ten_meter_temperature_caption"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/ten_meter_temperature_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/ten_meter_temperature"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/fifteen_meter_temperature_caption"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/fifteen_meter_temperature_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/fifteen_meter_temperature"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/twenty_meter_temperature_caption"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/twenty_meter_temperature_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/twenty_meter_temperature"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/additional_data_caption"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/additional"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/buoy"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:id="@+id/additional_data_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/buoy"
            android:visibility="gone" />

        <TableLayout
            android:id="@+id/additional_data_table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/dew_point_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/dew_point"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/dissolved_oxygen_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/dissolved_oxygen"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/dissolved_oxygen_saturation_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/dissolved_oxygen_saturation"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/chlorophyll_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/chlorophyll"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_height="1dp"
                android:background="@color/water" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/phycocyanin_caption"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/phycocyanin"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/unknown_value"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>